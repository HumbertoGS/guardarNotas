<!DOCTYPE html>
<html lang="es">

<head>
    <title>
        <%= titulo %>
    </title>
    <%- include('partials/head'); %>
</head>

<body class="container">
    <%- include('partials/header'); %>

        <div class="contenedor">
            <div class="row justify-content-center">
                <div class="col-7">
                    <% if(Tarea.length) {%>
                        <% Tarea.forEach(function(tarea){%>
                            <div class="card border-primary mb-4 card_sh">
                                <div class="card-header text-white bg-primary">
                                    <h4>
                                        <%= tarea.titulo%>
                                    </h4>
                                    <div class="text-end">
                                        <%= tarea.publicado%>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <%= tarea.tarea %>
                                </div>
                            </div>
                        <%})%>
                    <%} else {%>
                        <p class="text-center h1 text-primary">No hay entradas</p>
                    <%}%>
                </div>
            </div>
        </div>

        <%- include('partials/footer'); %>
</body>

</html>